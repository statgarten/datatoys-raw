						<연계항목 type="이미지" 연계시작="ITKC_MO_1237A_B137_523C" 연계종료="ITKC_MO_1237A_B137_524C"/>
					</연계정보>
				</레벨4>
				<레벨4 type="최종정보" id="ITKC_MO_1237A_0140_010_0080" 자료생성일="2020-10-15" DCI="ITKC_MO_1237A_0140_010_0080_2020_B137_XML">
					<메타정보>
						<제목정보>
							<제목>石東精舍上梁文 <원주>辛丑</원주></제목>
						</제목정보>
						<저자정보 type="필자">
							<저자>
								<한글성명>조성가</한글성명>
								<한자성명>趙性家</한자성명>
							</저자>
